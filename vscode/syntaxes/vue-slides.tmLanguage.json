{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vue Slides",
  "patterns": [
    {
      "name": "meta.vue-slides",
      "include": "#frontMatter"
    },
    {
      "include": "#slide"
    }
  ],
  "repository": {
    "slide": {
      "patterns": [
        {
          "name": "slide.vue-slides",
          "begin": "<!-- (slide)(?::(.*?))? -->",
          "end": "(?=<!-- slide(?::.*?)? -->|\\z)",
          "patterns": [{ "include": "#markdown" }],
          "beginCaptures": {
            "0": {
              "name": "comment.block.separator.slide.vue-slides"
            },
            "1": {
              "name": "keyword.separator.slide.vue-slides"
            },
            "2": {
              "name": "title.separator.slide.vue-slides"
            }
          }
        }
      ]
    },
    "frontMatter": {
      "begin": "(^|\\A)-{3}\\s*$",
      "contentName": "meta.embedded.block.frontmatter",
      "patterns": [
        {
          "include": "source.yaml"
        }
      ],
      "end": "(^|\\G)-{3}|\\.{3}\\s*$"
    },
    "markdown": {
      "contentName": "meta.embedded.block.markdown",
      "patterns": [
        {
          "include": "#frontMatter"
        },
        {
          "include": "text.html.markdown"
        }
      ]
    }
  },
  "scopeName": "source.vue-slides"
}
